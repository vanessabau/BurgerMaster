<div class="container">
  <div class="row">
    <div class="col" id="center">
      <h1>Burger Master</h1>
			<img src="https://raw.githubusercontent.com/vanessabau/BurgerMaster/master/public/assets/burger-burlywood.jpg" alt="burger">
      
    </div>
  </div>
<hr>
  <div class="row">
    <div class="col">
      <h4>BURGERS TO EAT</h4>
        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>

    <div class="col">
      <h4>DEVOURED BURGERS</h4>
        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
  </div>
<hr>
  <div class="row">
    <div class="col" id="center">
      <h2>Add Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Add a burger you would like to eat then click "submit" button</label><br>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group" id="hide">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured?<br>
            <input type="radio" name="devoured" value="0"> Not eaten yet
          </div>

          <button type="submit" class="btn btn-danger">Submit</button>
        </form>
      </div>
    </div>
    <div class="footer" style="height:100px"></div>

</div>
